{
  "name": "clarity-addons",
  "version": "0.0.0",
  "description": "Webcomponent clarity-addons following open-wc recommendations",
  "author": "clarity-addons",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "npm-run-all clean -p build:watch dev",
    "clean": "del ./dist",
    "dev": "web-dev-server --node-resolve",
    "lint": "eslint -c .eslintrc.js \"**/*.ts\" --ignore-pattern \"dist\" && prettier --check .",
    "format": "eslint -c .eslintrc.js \"**/*.ts\" --ignore-pattern \"dist\" --fix && prettier --write .",
    "build": "tsc",
    "build:watch": "tsc -w"
  },
  "dependencies": {
    "@cds/city": "^1.1.0",
    "@cds/core": "^5.6.1",
    "lit": "^2.0.2",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": ">=7.11.0",
    "@babel/eslint-parser": ">=7.11.0",
    "@babel/eslint-plugin": "^7.16.5",
    "@open-wc/eslint-config": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@web/dev-server": "^0.1.29",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-import-maps": "^0.0.6",
    "@web/dev-server-storybook": "^0.4.1",
    "cpy-cli": "^3.1.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-wc": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^1.20.0||^2.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
